# Educational Platform Backend Configuration
# Copy this file to .env and update the values for your environment

# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# Security Configuration
# ===========================================
# IMPORTANT: Change this to a random 32+ character string in production!
JWT_SECRET=educational-platform-super-secret-jwt-key-change-in-production-2024

# Session secret for additional security
SESSION_SECRET=educational-platform-session-secret-change-this-too

# ===========================================
# CORS Configuration
# ===========================================
# Frontend URL for CORS (where your React app is hosted)
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# Database Configuration (Future Use)
# ===========================================
# Uncomment and configure when adding database support
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=educational_platform
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_SSL=false

# ===========================================
# Email Configuration (Future Use)
# ===========================================
# For sending notifications, password resets, etc.
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ===========================================
# Rate Limiting Configuration
# ===========================================
# General API rate limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Authentication rate limiting (attempts per 15 minutes)
AUTH_RATE_LIMIT_MAX=10

# ===========================================
# Security Configuration
# ===========================================
# BCrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

# ===========================================
# Logging Configuration
# ===========================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable certain features
ENABLE_PDF_GENERATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# ===========================================
# External Services (Future Use)
# ===========================================
# Analytics service
# ANALYTICS_API_KEY=your-analytics-key

# Payment processing
# STRIPE_SECRET_KEY=sk_test_your-stripe-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# Development Configuration
# ===========================================
# API documentation
API_DOCS_URL=/api/docs
ENABLE_API_DOCS=true

# Debug mode
DEBUG_MODE=true